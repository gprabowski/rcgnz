<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F2124"
    android:orientation="horizontal"
    android:paddingTop="30dp"
    tools:context=".MainActivity"
    android:baselineAligned="false">

<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="15"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:paddingBottom="10dp"
        android:src="@drawable/ic_logo_only"
        android:contentDescription="@string/logo" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:clickable="true"
        android:src="@drawable/ic_baseline_send_24"
        app:backgroundTint="#715DAE"
        android:layout_marginTop="30dp"/>


</LinearLayout>


    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="60"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/thumb_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="30"
        android:adjustViewBounds="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/image_loaded" />

    <TextView
        android:id="@+id/response_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="10"
        android:fontFamily="@font/ubuntu_medium"
        android:gravity="center"
        android:text="@string/result_string"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        tools:text="@string/result_string"
        tools:visibility="visible" />

</LinearLayout>




    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="10"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/pet_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_pets_24"
            android:tint="#53ABE3"
            android:contentDescription="@string/dog_breed_recognition_button" />

        <ImageButton
            android:id="@+id/face_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_face_24"
            android:tint="#5B44A2"
            android:contentDescription="@string/emotion_recognition_button" />


        <ImageButton
            android:id="@+id/traffic_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginEnd="10dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_traffic_24"
            android:tint="#53ABE3"
            android:contentDescription="@string/traffic_sign_recognition_button" />

        <ImageButton
            android:id="@+id/plant_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_local_florist_24"
            android:tint="#53ABE3"
            android:contentDescription="@string/flower_recognition_button" />


    </LinearLayout>


</LinearLayout>